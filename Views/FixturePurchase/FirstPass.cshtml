
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>工具夹类别管理</title>
    <link rel="stylesheet" href="~/Content/bootstrap-table.min.css" />
    <link href="~/Content/diy-bootstraptable.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-editable.css" />
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <!--行内编辑-->
    <!-- Latest compiled and minified JavaScript -->
    <script src="~/Scripts/bootstrap-table.min.js"></script>
    <!-- Latest compiled and minified Locales -->
    <script src="~/Scripts/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/Scripts/bootstrap-table-editable.min.js"></script>
    <!-- 弹出框插件-->
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <!-- 消息提示插件：toastr.js -->
    <link href="~/Content/toastr/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.min.js" type="text/javascript"></script>
    <script src="~/Scripts/es6-promise.min.js "></script>
    <script src="~/Scripts/es6-promise.auto.min.js "></script>
    <!-- 图表插件 echarts -->
    <script src="~/Scripts/echarts/echarts.min.js"></script>
    <script src="~/Scripts/common.toastr.init.js"></script>
    <script src="~/Scripts/common.form.validate.js"></script>
    <script src="~/Scripts/common.bootstraptable.init.js"></script>
</head>
<body>
    <div class="panel-body" style="padding-bottom:0px;">
        <div>
            <table id="PurchaseTable" class="table-striped"></table>
        </div>
    </div>

    <script type="text/javascript">
 
        // 行样式
        function rowStyle(row, index) {
            var classes = ['success', 'danger']
            return { classes: classes[index % classes.length] };
        }

        

        /**
         * 数据列
         * */
        var columns = [
            {
            field: 'AppBy',
            title: '用户编号',
            visable: true,
            sortable: true,
            align: 'center',
        }, {
            field: 'AppByName',
            title: '用户名',
            visable: true,
            align: 'center',

            }, {
                field: 'FamilyID',
                title: '类型编号',
                visable: true,
                align: 'center',
            },{
                field: 'Code',
                title: '夹具编号',
                visable: true,
                align: 'center',
            }, {
                field: 'SeqID',
                title: '夹具序列号',
                visable: true,
                align: 'center',
            }, {
                field: 'BillNo',
                title: '采购单号',
                visable: true,
                align: 'center',
            }, {
                field: 'RegDate',
                title: '采购时间',
                visable: true,
                align: 'center',
            }, {
                field: 'Pic',
                title: '图片',
                visable: true,
                align: 'center',
            }, {
                field: 'State',
                title: '审查状态',
                visable: true,
                align: 'center',
            },
        {
            field: 'Operation',
            title: '操作',
            //events: operationEvents,
            align: 'center',
            formatter: function (value, row, index) {
                return [
                    '<div class="btn-group">',
                    '<button id="btn_update"  type="button" class="btn btn-success" onclick="update(this)" data-toggle="modal" ><i  aria-hidden="true"></i><span>初审通过√</span></button>',
                    '<button id="btn_delete"  type="button" class="btn btn-danger" onclick="del(this)"><i  aria-hidden="true"  ></i><span>×驳回</span></button>',
                    '</div>'
                ].join(' ');
            }
        },]

        function del(obj) {
            Billno = obj.parentNode.parentNode.parentNode.childNodes[5].textContent;
            State = "驳回";
            var record = Billno + ";" + State;
            UpdateRecord("/FixturePurchase/RebutApply", "PurchaseTable", record);
        }

        function update(obj) {
            Billno = obj.parentNode.parentNode.parentNode.childNodes[5].textContent;
            State = "终审";
            var record = Billno + ";" + State;
            UpdateRecord("/FixturePurchase/PassFirstApply", "PurchaseTable", record);
        }


        /**
         * table 初始化
         * */
        var TableInit = function () {
            var PurchaseTable = new Object();

            PurchaseTable = BoootstrapTableInit("PurchaseTable", '/FixturePurchase/ReadPurchaseFirstPass', rowStyle, columns)
            return PurchaseTable;
        }

        /**
         * 调用 TableInit
         * */
        $(function () {
            var itable = TableInit();//.初始化  Table
        });</script>
</body>
</html>
